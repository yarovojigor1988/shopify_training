{{ 'slick.css' | asset_url | stylesheet_tag }}
{{ 'slick-theme.css' | asset_url | stylesheet_tag }}

<script src="{{ 'jquery-3.6.0.min.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'slick.min.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'custom.js' | asset_url }}" defer="defer"></script>

{%- style -%}
.slick-track{
    display: flex !important;
}

.slick-slide{
    box-sizing: border-box;
    overflow: hidden;
    position: inherit;
    padding-bottom: 300px;
    position: relative;
}

.custom-carousel-image{
    width: 100%;
    height: auto;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
}
.slick-list{
    z-index: -1;
}

.slick-prev{
    left: 20px;
    width: 30px;
    height: 30px;
}

.slick-next {
  right: 20px;
  width: 30px;
  height: 30px;
}

.slick-prev::before, .slick-next::before{
    font-size: 30px;
    opacity: 1;
    color: #ff0101;
}

{%- endstyle -%}
<div 
    class="custom-carousel-holder"
    id="customSlider-{{ section.id }}"
>
    <div class="custom-carousel">
        {%- for block in section.blocks -%}
            <a href="{{ block.settings.link }}" >
                <img 
                    class="custom-carousel-image"
                    srcset="{{ block.settings.image | image_url: width: 550 }}"
                    sizes="100vw"
                    src="{{ block.settings.image | image_url: width: 550 }}"
                    loading="lazy"
                    alt="{{ block.settings.image.alt | escape }}"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round }}"
                >
            </a>
        {%- endfor -%}
      </div>
</div>

{% schema %}
{
  "name": "Custom carousel",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Custom sliders header"
    },
    {
      "type": "text",
      "id": "accessibility_info",
      "label": "Slide header",
      "info": "Slide header",
      "default": "Slideshow about our brand"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Custom slide name",
      "limit": 15,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom slide image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Slide link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom carousel",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
